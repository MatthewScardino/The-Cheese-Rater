<h1>Update This Review:</h1>
<form id="update-review" action="/reviews" method="post">

    User: <select name="user_ID">
        <option value = "{{review.user_ID}}" selected hidden>{{review.fname}} {{review.lname}}</option>
        {{#each users}}
            <option value="{{user_ID}}">{{fname}} {{lname}}</option>
        {{/each}}
    </select><br><br>

    Product: <select name="product_ID">
        <option value = "{{review.product_ID}}" selected hidden>{{review.product_name}}</option>
        {{#each products}}
        <option value="{{product_ID}}">{{product_name}}</option>
        {{/each}}
    </select><br><br>

    Rating: <select name="rating" value="{{Reviews.rating}}">
        <option value="{{review.rating}}" selected hidden>{{review.rating}}</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
    </select><br><br>    

    Comment: <input name="comment" type="text" maxlength="255" value="{{review.comment}}"><br><br>
</form>
<button onclick= updateReview({{review.review_ID}})>Update</button>
<script defer>selectUser({{review.user_ID}});</script>
<script defer>selectProduct({{review.product_ID}});</script>
</html>
