<h1 style='text-align: center;'>Products</h1>


<form id='filter_products' action='' method=''>
    <label> Filter by Brand: </label>
    <select id='brand_filter' name="brands"> 
        {{#each brands}}
        <option value="{{brand_ID}}">{{brand_name}}</option>
        {{/each}}
    </select>
    <input type="submit" value="Filter" onclick= 'filterProductsByBrand()'>
</form>

<form id='search_products' action='' method=''>
    <label> Search Products For Name Starting with:</label>
    <input id='name_search_string' type='text' name='name_search_string' value=''>
    <button type="button" onclick="searchProductsByName()">Submit</button>
</form>

<table class='table'>
    <thead> 
        <tr>
            <th scope="col"> Product Name</th>
            <th scope="col"> Type</th>
            <th scope="col"> Brand Name</th>
            <th scope="col"> Description</th>
        </tr>
    </thead> 
    <tbody>
        {{#each products}} 
        <tr scope = 'row'> 
            <td>{{product_name}}</td> 
            <td>{{type}}</td> 
            <td>{{brand_name}}</td>
            <td>{{description}}</td> 
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

<h2>Add Product:</h2>
<form class='entry-form' id="add_product" action="/products" method="post">
    Name: <input name="product_name" type="text" maxlength="50"><br><br>
    Brand: <select name="brand_ID">
        {{#each brands}}
        <option value="{{brand_ID}}">{{brand_name}}</option>
        {{/each}}
    </select><br><br>
    Type: <input name="type" type="text" maxlength="20"><br><br>
    Description: <input name="description" type="text" maxlength="255"><br><br>
    <input type="submit" value="Add Product">
</form><br>

</html>
